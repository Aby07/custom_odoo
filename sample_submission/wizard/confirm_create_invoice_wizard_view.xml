<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_create_invoice_wiz_form" model="ir.ui.view">
        <field name="name">confirm.create.invoice.wiz.form</field>
        <field name="model">confirm.create.invoice.wiz</field>
        <field name="arch" type="xml">
            <form>
                <field name="sample_sub_id" invisible="1"/>
                <div name="warning_message" style="color: red; text-align: center; font-weight: bold; font-size: 16px;">
                    <field name="warning_message" readonly="1"/>
                </div>
                <footer>
                    <button name="action_create_invoice" string="OK" type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
