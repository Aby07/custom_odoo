<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.module.category" id="module_category_submission">
        <field name="name">Sample Submission Catregory</field>
        <field name="sequence">50</field>
    </record>

    <record id="group_sample_submission_own" model="res.groups">
        <field name="name">Own Document</field>
        <field name="category_id" ref="module_category_submission"/>
    </record>

    <record id="group_sample_submission_all" model="res.groups">
        <field name="name">All Documents</field>
        <field name="implied_ids" eval="[(4, ref('group_sample_submission_own'))]"/>
        <field name="category_id" ref="module_category_submission"/>
    </record>

    <record id="group_plantation_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="implied_ids" eval="[(4, ref('group_sample_submission_all'))]"/>
        <field name="category_id" ref="module_category_submission"/>
    </record>

</odoo>